<div class="container">
	<div class="row">
    <%= render 'users/info', user:@book.user, book:@newbook %>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg",size:'50x50'%><br><br><br>
              <%= @book.user.name %>
              <% end %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user== current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id),class: "btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy",destroy_book_path,class: "btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
          </td>
          <% end %>
        </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>