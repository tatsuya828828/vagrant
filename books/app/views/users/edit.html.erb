  <div class="alert">
    <h2><%= @user.errors.count %>errors prohibited this obj from being saved: </h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
  <div class="container">
    <p id="notice"></p>
      <h2>User info</h2>
      <%= form_for (@user) do |f| %>
      <label for="user_name">Name</label>
      <%= f.text_field :name %><br>
      <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image %><br>
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction %><br>
      <%= f.submit "Update User" %>
      <% end %>
  </div>
