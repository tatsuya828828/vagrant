<div class="container">
  <div class="row">
    <%= render 'users/info', user:@user, me:@me, book:@book %>
    <div class="col-xs-9">
      <h2>Users</h2>

      <table class="table">
        <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
            <tr>
              <td class="image"><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg",size:'50x50' %></td>
              <td class="name"><%= user.name %></td>
              <td class="link"><%= link_to "Show",user_path(user.id) %></td>
            </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
