<% if book.errors.any? %>
  <div class="alert">
    <h2><%= book.errors.count %>errors prohibited this obj from being saved: </h2>
          <ul>
            <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
  </div>
<% end %>
<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag me, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg",size: '100x100' %>
  <table class="table">
    <tbody>
      <tr></tr> 
      <tr>
    	  <th>name</th>
    	  <th>
          <%= me.name %>
        </th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th>
          <%= me.introduction %> 
        </th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <span>
    <%= link_to "" ,edit_user_path(me),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench speak:none;" %>
  </span>
  </div>
  <h2>New book</h2>
    <%= form_for book do |f| %>
      <div class="field row">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "col-xs-12" %>
      </div>
      <div class="field row">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "col-xs-12" %>
      </div>

      <div class="actions row">
        <%= f.submit "Create Book",class: "btn btn-primary col-xs-12"%>
      </div>
    <% end %>
</div>