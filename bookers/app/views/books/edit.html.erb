<div class="edit">
	<p class="notice"><%= notice %></p>
	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>

		<p>Title<br>
		<%= f.text_field :title %></p>

		<p>Body<br>
		<%= f.text_area :body %></p>

	<p><%= f.submit 'Update Book' %></p>
	<% end %>
		<span><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path(@book) %></span>
</div>
