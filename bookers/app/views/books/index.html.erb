<div class="index">
	<p class="notice"><%= notice %></p>
	<h1><strong>Books</strong></h1>
		<table>
				<tr>
					<th><strong>Title</strong></th>
					<th><strong>Body</strong></th>
					<th colspan="3"></th>
				</tr>
			  <% @books.each do |book| %>
				<tr>
					<td class="tdata"><%= book.title %></td>
					<td class="tdata"><%= book.body %></td>
					<td><%= link_to 'Show', book_path(book) %></td>
					<td><%= link_to 'Edit', edit_book_path(book) %></td>
					<td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
				</tr>
			  <% end %>
		</table>
	<p class="newbook"><strong>New book</strong></p>
	<% if @book.errors.any? %>
  	<div id="error_explanation" class="alert alert-danger">
    	<ul>
      	<% @book.errors.full_messages.each do |message| %>
       	 <li><%= message %></li>
     	 <% end %>
    	</ul>
  	</div>
	<% end %>
	<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %><br>

	<%= f.submit 'Create Book' %>
	<% end %>
</div>